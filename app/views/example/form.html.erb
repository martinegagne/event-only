<%= form_for @job_application do |f|%>

  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name%>
  </div><br>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone%>
  </div><br>


  <div>
    <%= f.label :hobby %>
    <%= f.text_field :hobby%>
  </div><br>

  <div>
    <%= f.label :years_experience %>
    <%= f.text_field :years_experience%>
  </div><br>


  <div>
    <%= f.label :available_date %>
    <%= f.text_field :available_date%>
  </div><br>

  <div>
    <%= f.submit %>
  </div><br>

<% end %>

